{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "ES2020",
      "lib": ["ES2020", "WebWorker"],
      "alwaysStrict": true,
      "strict": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,
      "types": ["@cloudflare/workers-types"]
    },
    "include": [
      "./src/**/*.ts",
      "./test/**/*.ts"
    ],
    "exclude": ["node_modules/", "dist/"]
}
  